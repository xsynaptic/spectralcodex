{
	"name": "spectralcodex",
	"type": "module",
	"version": "3.0.0",
	"scripts": {
		"astro": "astro",
		"dev": "astro dev",
		"build": "astro check && astro build --max-old-space-size=4096",
		"preview": "astro preview",
		"lint": "eslint",
		"lint-content": "eslint ./src/content --ext md,mdx",
		"test": "vitest",
		"check-types": "tsc --noEmit --extendedDiagnostics",
		"copy-public-fonts": "tsx ./scripts/copy-public-fonts.ts",
		"export-map-icons": "tsx --env-file=.env ./scripts/export-map-icons.ts && spreet --unique --minify-index-file --sdf ./temp/icons ./public/icons/map-icons && spreet --retina --unique --minify-index-file --sdf ./temp/icons ./public/icons/map-icons@2x",
		"clean-build-images": "tsx --env-file=.env ./scripts/clean-build-images.ts",
		"clean-content-layer": "rm -rf .astro && rm node_modules/.astro/data-store.json",
		"deploy": "./scripts/deploy.sh",
		"deploy-assets": "tsx --env-file=.env ./scripts/clean-build-images.ts && ./scripts/deploy-assets.sh",
		"deploy-full": "astro check && astro build --max-old-space-size=4096 && tsx --env-file=.env ./scripts/clean-build-images.ts && ./scripts/deploy-assets.sh && ./scripts/deploy.sh"
	},
	"license": "MIT",
	"browserslist": [
		"> 0.5%",
		"last 2 versions",
		"not ie 11",
		"not ie_mob 11",
		"not dead"
	],
	"dependencies": {
		"@astrojs/markdown-remark": "^6.0.1",
		"@astrojs/mdx": "^4.0.2",
		"@astrojs/node": "^9.0.0",
		"@astrojs/react": "^4.1.0",
		"@astrojs/rss": "^4.0.10",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/tailwind": "^5.1.3",
		"@fontsource-variable/commissioner": "^5.1.0",
		"@fontsource-variable/geologica": "^5.1.0",
		"@fontsource-variable/lora": "^5.1.0",
		"@fontsource/geologica": "^5.1.0",
		"@iconify-json/mdi": "^1.2.1",
		"@iconify/json": "^2.2.282",
		"@iconify/tools": "^4.0.7",
		"@iconify/utils": "^2.2.0",
		"@sindresorhus/slugify": "^2.2.1",
		"@spectralcodex/image-loader": "workspace:*",
		"@spectralcodex/image-open-graph": "workspace:*",
		"@spectralcodex/image-service": "workspace:*",
		"@spectralcodex/react-map-component": "workspace:*",
		"@spectralcodex/tailwind": "workspace:*",
		"@spectralcodex/unified": "workspace:*",
		"@turf/helpers": "^7.1.0",
		"@turf/turf": "^7.1.0",
		"alfaaz": "^1.1.0",
		"astro": "^5.0.5",
		"astro-auto-import": "^0.4.4",
		"astro-seo": "^0.8.4",
		"exiftool-vendored": "^29.0.0",
		"keyv": "^5.2.2",
		"ky": "^1.7.3",
		"maplibre-gl": "^4.7.1",
		"p-limit": "^6.1.0",
		"pmtiles": "^4.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"remeda": "^2.17.4",
		"url-join": "^5.0.0"
	},
	"devDependencies": {

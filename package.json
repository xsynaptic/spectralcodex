		"@astrojs/node": "^9.0.0",
		"@astrojs/react": "^4.1.2",
		"@astrojs/rss": "^4.0.10",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/tailwind": "^5.1.4",
		"@eslint/js": "^9.17.0",
		"@fontsource-variable/commissioner": "^5.1.0",
		"@fontsource-variable/geologica": "^5.1.0",
		"@fontsource-variable/lora": "^5.1.0",
		"@fontsource/geologica": "^5.1.0",
		"@iconify/json": "^2.2.290",
		"@iconify/tools": "^4.1.1",
		"@iconify/utils": "^2.2.1",
		"@sindresorhus/slugify": "^2.2.1",
		"@spectralcodex/image-loader": "workspace:*",
		"@spectralcodex/image-open-graph": "workspace:*",
		"@spectralcodex/image-service": "workspace:*",
		"@spectralcodex/react-map-component": "workspace:*",
		"@spectralcodex/tailwind": "workspace:*",
		"@spectralcodex/unified": "workspace:*",
		"@tailwindcss/typography": "^0.5.15",

{
	"name": "@xsynaptic/spectralcodex",
	"type": "module",
	"version": "5.1.2",
	"scripts": {
		"astro": "astro",
		"dev": "astro dev",
		"build": "astro check && NODE_OPTIONS=--max-old-space-size=8192 astro build",
		"preview": "astro preview",
		"lint": "eslint",
		"lint-content": "eslint ./packages/content --config ./packages/content/eslint.config.mjs",
		"lint-content-demo": "eslint ./packages/content-demo --config ./packages/content-demo/eslint.config.mjs",
		"test": "vitest",
		"check-types": "tsc --noEmit --extendedDiagnostics",
		"export-map-icons": "tsx --env-file=.env ./scripts/export-map-icons.ts && spreet --unique --minify-index-file --sdf ./temp/icons ./public/icons/map-icons && spreet --retina --unique --minify-index-file --sdf ./temp/icons ./public/icons/map-icons@2x",
		"clean-build-images": "tsx --env-file=.env ./scripts/clean-build-images.ts",
		"clean-content-layer": "rm -rf .astro && rm node_modules/.astro/data-store.json",
		"host-images": "serve packages/content/media",
		"deploy-hybrid": "tsx --env-file=.env ./scripts/deploy-hybrid.ts",
		"deploy-static": "tsx --env-file=.env ./scripts/deploy-static.ts"
	},
	"license": "MIT",
	"browserslist": [
		"> 0.5%",
		"last 2 versions",
		"not ie 11",
		"not ie_mob 11",
		"not dead"
	],
	"imports": {
		"#*": "./src/*"
	},
	"resolutions": {
		"vite": "6.3.4"
	},
	"dependencies": {
		"astro": "^5.7.13",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@astrojs/markdown-remark": "^6.3.1",
		"@astrojs/mdx": "^4.2.6",
		"@astrojs/node": "^9.2.1",
		"@astrojs/react": "^4.2.7",
		"@astrojs/rss": "^4.0.11",
		"@astrojs/sitemap": "^3.4.0",
		"@iconify/json": "^2.2.338",
		"@iconify/tools": "^4.1.2",
		"@iconify/utils": "^2.3.0",
		"@sindresorhus/slugify": "^2.2.1",
		"@spectralcodex/image-loader": "workspace:*",
		"@spectralcodex/image-open-graph": "workspace:*",
		"@spectralcodex/local-image-server": "workspace:*",
		"@spectralcodex/map-types": "workspace:*",
		"@spectralcodex/react-map-component": "workspace:*",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.7",
		"@tanstack/eslint-plugin-query": "^5.74.7",
		"@turf/helpers": "^7.2.0",
		"@turf/turf": "^7.2.0",
		"@types/geojson": "^7946.0.16",
		"@types/postcss-inline-svg": "^5.0.4",
		"@types/react": "^19.1.4",
		"@types/react-dom": "^19.1.5",
		"@xsynaptic/eslint-config": "link:../eslint-config",
		"@xsynaptic/unified-tools": "^0.0.4",
		"alfaaz": "^1.1.0",
		"astro-auto-import": "^0.4.4",
		"astro-pagefind": "^1.8.3",
		"astro-seo": "^0.8.4",
		"chalk": "^5.4.1",
		"eslint": "^9.26.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"exiftool-vendored": "^29.3.0",
		"geojson": "^0.5.0",
		"globals": "^16.1.0",
		"keyv": "^5.3.3",
		"ky": "^1.8.1",
		"maplibre-gl": "^5.5.0",
		"nanoid": "^5.1.5",
		"p-limit": "^6.2.0",
		"postcss-inline-svg": "^6.0.0",
		"prettier": "^3.5.3",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"react-compiler-runtime": "19.1.0-rc.2",
		"rehype-wrap-cjk": "^0.2.6",
		"remeda": "^2.21.6",
		"sharp": "^0.34.1",
		"tailwindcss": "^4.1.7",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"unified": "^11.0.5",
		"url-join": "^5.0.0",
		"vite": "6.3.4",
		"vitest": "^3.1.3",
		"zx": "^8.5.4"
	},
	"packageManager": "pnpm@10.7.1+sha512.2d92c86b7928dc8284f53494fb4201f983da65f0fb4f0d40baafa5cf628fa31dae3e5968f12466f17df7e97310e30f343a648baea1b9b350685dafafffdf5808"
}

{
	"name": "@xsynaptic/spectralcodex",
	"type": "module",
	"version": "5.5.0",
	"scripts": {
		"astro": "astro",
		"dev": "astro dev",
		"build": "astro check && NODE_OPTIONS=--max-old-space-size=8192 astro build",
		"preview": "astro preview",
		"lint": "eslint",
		"lint-content": "eslint ./packages/content --config ./packages/content/eslint.config.mjs",
		"lint-content-demo": "eslint ./packages/content-demo --config ./packages/content-demo/eslint.config.mjs",
		"test": "vitest",
		"check-types": "tsc --noEmit --extendedDiagnostics",
		"clean-build-images": "tsx --env-file=.env ./scripts/clean-build-images.ts",
		"host-images": "serve packages/content/media",
		"content-related": "pnpm --filter @spectralcodex/scripts content-related --root-path=$PWD --content-path=packages/content",
		"content-schemas": "pnpm --filter @spectralcodex/scripts content-schemas --root-path=$PWD --content-path=packages/content",
		"content-validate": "pnpm --filter @spectralcodex/scripts content-validate --root-path=$PWD --content-path=packages/content",
		"map-divisions": "pnpm --filter @spectralcodex/scripts map-divisions --root-path=$PWD --cache-path ./temp/divisions --regions-path ./packages/content/collections/regions --output-path ./public/divisions",
		"map-spritesheet": "pnpm --filter @spectralcodex/scripts map-spritesheet --root-path=$PWD --temp-path ./temp/icons --output-path ./public/icons/map-icons",
		"deploy-hybrid": "tsx --env-file=.env ./scripts/deploy-hybrid.ts",
		"deploy-static": "tsx --env-file=.env ./scripts/deploy-static.ts"
	},
	"license": "MIT",
	"browserslist": [
		"> 0.5%",
		"last 2 versions",
		"not ie 11",
		"not ie_mob 11",
		"not dead"
	],
	"imports": {
		"#*": "./src/*"
	},
	"resolutions": {
		"vite": "6.3.4"
	},
	"dependencies": {
		"astro": "^5.13.3",
		"react": "^19.1.1",
		"react-dom": "^19.1.1"
	},
	"devDependencies": {
		"@astrojs/markdown-remark": "^6.3.6",
		"@astrojs/mdx": "^4.3.4",
		"@astrojs/node": "^9.4.3",
		"@astrojs/react": "^4.3.0",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.5.1",
		"@iconify/json": "^2.2.377",
		"@iconify/utils": "^3.0.1",
		"@sindresorhus/slugify": "^2.2.1",
		"@spectralcodex/image-loader": "workspace:*",
		"@spectralcodex/image-open-graph": "workspace:*",
		"@spectralcodex/local-image-server": "workspace:*",
		"@spectralcodex/map-types": "workspace:*",
		"@spectralcodex/react-map-component": "workspace:*",
		"@spectralcodex/remark-img-group": "workspace:*",
		"@spectralcodex/scripts": "workspace:*",
		"@spectralcodex/unified-tools": "workspace:*",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.1.12",
		"@tanstack/eslint-plugin-query": "^5.83.1",
		"@turf/helpers": "^7.2.0",
		"@turf/turf": "^7.2.0",
		"@types/geojson": "^7946.0.16",
		"@types/postcss-inline-svg": "^5.0.4",
		"@types/react": "^19.1.11",
		"@types/react-dom": "^19.1.7",
		"@xsynaptic/eslint-config": "^2.0.2",
		"alfaaz": "^1.1.0",
		"astro-auto-import": "^0.4.4",
		"astro-pagefind": "^1.8.3",
		"astro-seo": "^0.8.4",
		"chalk": "^5.6.0",
		"eslint": "^9.34.0",
		"eslint-plugin-astro": "^1.3.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"exiftool-vendored": "^30.3.0",
		"geojson": "^0.5.0",
		"globals": "^16.3.0",
		"keyv": "^5.5.0",
		"ky": "^1.9.0",
		"maplibre-gl": "^5.6.2",
		"nanoid": "^5.1.5",
		"p-limit": "^7.1.0",
		"postcss-inline-svg": "^6.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"react-compiler-runtime": "^19.1.0-rc.2",
		"rehype-wrap-cjk": "^0.5.0",
		"remeda": "^2.30.0",
		"sharp": "^0.34.3",
		"tailwindcss": "^4.1.12",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"unified": "^11.0.5",
		"url-join": "^5.0.0",
		"vite": "6.3.4",
		"vitest": "^3.2.4",
		"yaml": "^2.8.1",
		"zx": "^8.8.1"
	},
	"packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}

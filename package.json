{
	"name": "@xsynaptic/spectralcodex",
	"type": "module",
	"version": "5.3.0",
	"scripts": {
		"astro": "astro",
		"dev": "astro dev",
		"build": "astro check && NODE_OPTIONS=--max-old-space-size=8192 astro build",
		"preview": "astro preview",
		"lint": "eslint",
		"lint-content": "eslint ./packages/content --config ./packages/content/eslint.config.mjs",
		"lint-content-demo": "eslint ./packages/content-demo --config ./packages/content-demo/eslint.config.mjs",
		"test": "vitest",
		"check-types": "tsc --noEmit --extendedDiagnostics",
		"export-map-icons": "tsx --env-file=.env ./scripts/export-map-icons.ts",
		"clean-build-images": "tsx --env-file=.env ./scripts/clean-build-images.ts",
		"clean-content-layer": "rm -rf .astro && rm node_modules/.astro/data-store.json",
		"host-images": "serve packages/content/media",
		"deploy-hybrid": "tsx --env-file=.env ./scripts/deploy-hybrid.ts",
		"deploy-static": "tsx --env-file=.env ./scripts/deploy-static.ts"
	},
	"license": "MIT",
	"browserslist": [
		"> 0.5%",
		"last 2 versions",
		"not ie 11",
		"not ie_mob 11",
		"not dead"
	],
	"imports": {
		"#*": "./src/*"
	},
	"resolutions": {
		"vite": "6.3.4"
	},
	"dependencies": {

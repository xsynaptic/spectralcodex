---
import ObjectivesLayout from '#layouts/objectives.astro';
import { getObjectiveLocations } from '#lib/collections/locations/locations-utils-objectives.ts';
import { getMapData } from '#lib/map/map-data.ts';
import { getLocationsFeatureCollection } from '#lib/map/map-locations.ts';

const objectiveLocations = await getObjectiveLocations();

const mapData = getMapData({
	mapId: 'objectives',
	featureCollection: getLocationsFeatureCollection(objectiveLocations, { showAllLocations: true }),
	showObjectiveFilter: true,
});
---

<ObjectivesLayout {...mapData} />

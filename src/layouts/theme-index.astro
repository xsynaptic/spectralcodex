---
import type { Page } from 'astro';

import { transformMarkdown } from '@spectralcodex/unified-tools';

import type { ContentMetadataItem } from '#lib/metadata/metadata-types.ts';

import ContentHeader from '#components/content/content-header.astro';
import ContentSection from '#components/content/content-section.astro';
import MainSite from '#components/main/main-site.astro';
import Pagination from '#components/pagination/pagination.astro';
import PreviewGrid from '#components/preview/preview-grid.astro';
import { getTranslations } from '#lib/i18n/i18n-translations.ts';

interface Props {
	page: Page<ContentMetadataItem>;
}

const { page } = Astro.props;

const t = getTranslations();

const title = t(`collection.themes.labelPlural`);
const description = t(`collection.themes.description`);
---

<MainSite meta={{ title, description }}>
	<ContentHeader>
		<Fragment slot="header-title">{title}</Fragment>
	</ContentHeader>
	<ContentSection>
		<Fragment
			slot="section-description"
			set:html={page.currentPage === 1 ? transformMarkdown({ input: description }) : undefined}
		/>
		{
			page.data.length > 0 ? (
				<>
					<PreviewGrid
						items={page.data}
						showLocations={true}
						showPosts={true}
						showTitleMultilingual={true}
					/>
					<Pagination class="mt-small md:mt-medium" page={page} />
				</>
			) : undefined
		}
	</ContentSection>
</MainSite>

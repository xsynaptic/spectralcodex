---
import type { Page } from 'astro';

import { transformMarkdown } from '@xsynaptic/unified-tools';

import type { ContentMetadataItem } from '#lib/metadata/metadata-types.ts';

import ContentHeader from '#components/content/content-header.astro';
import ContentSection from '#components/content/content-section.astro';
import MainSite from '#components/main/main-site.astro';
import MetadataGrid from '#components/parts/metadata-grid.astro';
import Pagination from '#components/parts/pagination.astro';
import { getTranslations } from '#lib/i18n/i18n-translations.ts';
import { getSeoImageProps } from '#lib/utils/seo.ts';

interface Props {
	page: Page<ContentMetadataItem>;
}

const { page } = Astro.props;

const t = getTranslations();

const title = t(`collection.regions.labelPlural`);
const description = t(`collection.regions.description`);
---

<MainSite
	meta={{
		title,
		description,
		image: await getSeoImageProps({
			id: 'index-regions',
			alt: title,
		}),
	}}
>
	<ContentHeader>
		<Fragment slot="header-title">{title}</Fragment>
	</ContentHeader>
	<ContentSection>
		<Fragment
			slot="section-description"
			set:html={page.currentPage === 1 ? transformMarkdown({ input: description }) : undefined}
		/>
		{
			page.data.length > 0 ? (
				<>
					<MetadataGrid
						items={page.data}
						showLocations={true}
						showPosts={true}
						showTitleMultilingual={true}
					/>
					<Pagination class="mt-small md:mt-medium" page={page} />
				</>
			) : undefined
		}
	</ContentSection>
</MainSite>

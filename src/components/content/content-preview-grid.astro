---
import type { ContentPreviewItemProps } from '@/types/components';
import type { ContentMetadataItem } from '@/types/metadata';

import ContentPreviewGridItem from '@/components/content/content-preview-grid-item.astro';
import Grid from '@/components/parts/grid.astro';

interface Props extends ContentPreviewItemProps {
	class?: string | undefined;
	items: ContentMetadataItem[];
}

const { class: className, items, ...contentPreviewGridOptions } = Astro.props;
---

{
	items.length > 0 ? (
		<Grid class={className}>
			{items.map((item) => (
				<ContentPreviewGridItem item={item} {...contentPreviewGridOptions} />
			))}
		</Grid>
	) : undefined
}

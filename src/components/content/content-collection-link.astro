---
import type { ContentMetadataCollectionKey } from '#lib/types/index.ts';

import Link from '#components/parts/link.astro';
import { getTranslations } from '#lib/i18n/i18n-translations.ts';
import { getSiteUrl } from '#lib/utils/routing.ts';

interface Props {
	collection: ContentMetadataCollectionKey;
	hasHeroImage?: boolean;
}

const { collection, hasHeroImage, ...props } = Astro.props;

const collectionUrl = getSiteUrl(collection);

const t = getTranslations();
---

<Link
	class="font-semibold"
	href={collectionUrl}
	linkColor={hasHeroImage ? 'highlight-featured' : 'highlight'}
	{...props}>{t(`collection.${collection}.labelPlural`)}</Link
>

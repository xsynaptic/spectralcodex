---
import type { Page } from 'astro';

import type { PreviewItemProps } from '#components/preview/preview-grid.astro';
import type { ContentMetadataItem } from '#lib/types/index.ts';

import ContentSection from '#components/content/content-section.astro';
import Pagination from '#components/pagination/pagination.astro';
import PreviewGrid from '#components/preview/preview-grid.astro';
import { getTranslations } from '#lib/i18n/i18n-translations.ts';

interface Props {
	items?: Array<ContentMetadataItem>;
	page?: Page<ContentMetadataItem>;
	previewItemProps?: PreviewItemProps;
}

const { items, page, previewItemProps, ...props } = Astro.props;

const defaultPreviewItemProps = {
	showDate: true,
	showRegion: true,
	showTitleMultilingual: true,
} satisfies PreviewItemProps;

const hasItems = items && items.length > 0;

const t = getTranslations();
---

{
	hasItems || page ? (
		<ContentSection data-pagefind-ignore {...props}>
			<Fragment slot="section-title">{t('content.section.content')}</Fragment>
			{page ? (
				<>
					<PreviewGrid items={page.data} {...defaultPreviewItemProps} {...previewItemProps} />
					<Pagination class="mt-small md:mt-medium" page={page} />
				</>
			) : undefined}
			{hasItems ? <PreviewGrid items={items} {...previewItemProps} /> : undefined}
		</ContentSection>
	) : undefined
}

---
import type { PreviewItemProps } from '@/types/components';
import type { ContentMetadataItem } from '@/types/metadata';

import Grid from '@/components/parts/grid.astro';
import PreviewGridItem from '@/components/preview/preview-grid-item.astro';

interface Props extends PreviewItemProps {
	class?: string | undefined;
	items: Array<ContentMetadataItem>;
}

const { class: className, items, ...contentPreviewGridOptions } = Astro.props;
---

{
	items.length > 0 ? (
		<Grid class={className}>
			{items.map((item) => (
				<PreviewGridItem item={item} {...contentPreviewGridOptions} />
			))}
		</Grid>
	) : undefined
}

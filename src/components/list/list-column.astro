---
import type { HTMLTag, Polymorphic } from 'astro/types';
import type { CSSProperties } from 'react';

type Props<Tag extends Extract<HTMLTag, 'ol' | 'ul'> = Extract<HTMLTag, 'ol' | 'ul'>> =
	Polymorphic<{
		as: Tag;
		class?: string | undefined;
		listStyleType?: CSSProperties['listStyleType'];
	}>;

const { as: Tag = 'ul', class: className, listStyleType, ...props } = Astro.props;
---

<Tag
	class:list={[className, 'flex flex-col gap-2 pl-4']}
	style={{ listStyleType: listStyleType ?? (Tag === 'ul' ? 'disc' : 'decimal') }}
	{...props}
>
	<slot />
</Tag>

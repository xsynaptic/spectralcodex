<div>
	<button
		id="theme-toggle"
		class:list={[
			'ml-5 flex h-10 w-20 items-center justify-center rounded-full border transition-all',
			'border-primary-300 bg-primary-100 text-primary-800 dark:border-primary-600 dark:bg-primary-800 dark:text-primary-100',
		]}
		aria-label="Toggle theme"
		title="Toggle theme"
	>
		<div class:list={['hidden dark:inline', 'text-primary-400']}>Light</div>
		<div class:list={['inline dark:hidden', 'text-primary-600']}>Dark</div>
	</button>
</div>

<script>
	import { activateThemeToggle } from '@/components/theme/theme-toggle';

	activateThemeToggle('#theme-toggle');
</script>

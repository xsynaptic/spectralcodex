---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
	class?: string | undefined;
}

const { class: className, ...props } = Astro.props;
---

<div class:list={[className]} {...props}>
	<h3 class="text-primary-800 dark:text-primary-100 text-xs font-semibold">
		<slot name="image-metadata-item-title" />
	</h3>
	<div class="text-primary-700 dark:text-primary-200 truncate text-sm"><slot /></div>
</div>

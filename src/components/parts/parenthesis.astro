---
import type { HTMLTag, Polymorphic } from 'astro/types';

import { renderSlot } from '#lib/utils/astro.ts';

type Props<Tag extends HTMLTag = HTMLTag> = Polymorphic<{
	as: Tag;
	class?: string | undefined;
	before?: string | undefined;
	after?: string | undefined;
}>;

const { as: Tag = 'span', class: className, before = '(', after = ')', ...props } = Astro.props;

const content = await renderSlot(Astro.slots, 'default');
---

{
	content ? (
		<Tag class={className} {...props}>
			{before}
			<slot />
			{after}
		</Tag>
	) : undefined
}

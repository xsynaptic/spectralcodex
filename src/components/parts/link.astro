---
import type { HTMLAttributes } from 'astro/types';

import { renderSlot } from '#lib/utils/astro.ts';

const LinkColorEnum = {
	Primary: 'primary',
	PrimaryBright: 'primary-bright',
	PrimaryFeatured: 'primary-featured',
	Highlight: 'highlight',
	HighlightBright: 'highlight-bright',
	HighlightFeatured: 'highlight-featured',
	Accent: 'accent',
	AccentBright: 'accent-bright',
	AccentFeatured: 'accent-featured',
} as const;

type LinkColor = (typeof LinkColorEnum)[keyof typeof LinkColorEnum];

interface Props extends HTMLAttributes<'a'> {
	linkColor?: LinkColor | undefined;
	showDarkMode?: boolean | undefined;
}

const {
	class: className,
	href,
	linkColor = LinkColorEnum.Accent,
	showDarkMode = true,
	...props
} = Astro.props;

const children = await renderSlot(Astro.slots, 'default');
---

<a
	href={href}
	class:list={[
		'cursor-pointer transition-colors ease-linear',
		linkColor === LinkColorEnum.Primary ? 'text-primary-800 hover:text-primary-600' : undefined,
		linkColor === LinkColorEnum.Primary && showDarkMode
			? 'dark:text-primary-200 dark:hover:text-primary-50'
			: undefined,
		linkColor === LinkColorEnum.PrimaryBright
			? 'text-primary-300 hover:text-primary-100'
			: undefined,
		linkColor === LinkColorEnum.PrimaryBright && showDarkMode
			? 'dark:text-primary-600 dark:hover:text-primary-300'
			: undefined,
		linkColor === LinkColorEnum.PrimaryFeatured
			? 'text-primary-800 hover:text-primary-500 sm:text-primary-200 sm:hover:text-primary-50'
			: undefined,
		linkColor === LinkColorEnum.PrimaryFeatured && showDarkMode
			? 'dark:text-primary-200 dark:hover:text-primary-50 dark:sm:text-primary-800 dark:sm:hover:text-primary-500'
			: undefined,
		linkColor === LinkColorEnum.Highlight
			? 'text-highlight-500 hover:text-highlight-300'
			: undefined,
		linkColor === LinkColorEnum.Highlight && showDarkMode
			? 'dark:text-highlight-400 dark:hover:text-highlight-700'
			: undefined,
		linkColor === LinkColorEnum.HighlightBright
			? 'text-highlight-300 hover:text-highlight-200'
			: undefined,
		linkColor === LinkColorEnum.HighlightBright && showDarkMode
			? 'dark:text-highlight-600 dark:hover:text-highlight-800'
			: undefined,
		linkColor === LinkColorEnum.HighlightFeatured
			? 'text-highlight-500 hover:text-highlight-300 sm:text-highlight-300 sm:hover:text-highlight-200'
			: undefined,
		linkColor === LinkColorEnum.HighlightFeatured && showDarkMode
			? 'dark:text-highlight-400 dark:hover:text-highlight-700 dark:sm:text-highlight-400 dark:sm:hover:text-highlight-200'
			: undefined,
		linkColor === LinkColorEnum.Accent ? 'text-accent-500 hover:text-accent-300' : undefined,
		linkColor === LinkColorEnum.Accent && showDarkMode
			? 'dark:text-accent-400 dark:hover:text-accent-200'
			: undefined,
		linkColor === LinkColorEnum.AccentBright
			? 'text-accent-300 hover:text-accent-200 dark:text-accent-200 dark:hover:text-accent-100'
			: undefined,
		linkColor === LinkColorEnum.AccentBright && showDarkMode
			? 'dark:text-accent-600 dark:hover:text-accent-800'
			: undefined,
		linkColor === LinkColorEnum.AccentFeatured
			? 'text-accent-500 hover:text-accent-300 sm:text-accent-300 sm:hover:text-accent-200'
			: undefined,
		linkColor === LinkColorEnum.AccentFeatured && showDarkMode
			? 'dark:text-accent-400 dark:hover:text-accent-300 dark:sm:text-accent-300 dark:sm:hover:text-accent-200'
			: undefined,

		className,
	]}
	{...props}><Fragment set:html={children} /></a
>

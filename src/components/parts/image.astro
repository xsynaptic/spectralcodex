---
import { Image as UnpicImage } from '@unpic/astro/base';

import type { ImageComponentProps } from '#lib/image/image-types.ts';

import { signedIpxTransformer } from '#lib/image/image-server.ts';

// Props interface: same as unpic base but without transformer
type Props = ImageComponentProps;

const { class: className, ...props } = Astro.props;
---

<UnpicImage
	{...props}
	class:list={['w-full object-cover', className]}
	transformer={signedIpxTransformer}
/>

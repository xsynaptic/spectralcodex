---
import type { HTMLTag, Polymorphic } from 'astro/types';

type Props<Tag extends Extract<HTMLTag, 'ol' | 'ul'> = Extract<HTMLTag, 'ol' | 'ul'>> =
	Polymorphic<{
		as: Tag;
		class?: string | undefined;
	}>;

const { as: Tag = 'ul', class: className, ...props } = Astro.props;
---

<Tag class:list={['inline-flex flex-wrap items-start gap-x-1 gap-y-2', className]} {...props}>
	<slot />
</Tag>

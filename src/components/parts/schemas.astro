---
import type { Thing, WithContext } from 'schema-dts';

import { serializeSchema } from '#lib/utils/schema.ts';

interface Props {
	schemas: Array<WithContext<Thing>>;
}

const { schemas } = Astro.props;
---

{
	schemas.map((schema) => (
		<script type="application/ld+json" is:inline set:html={serializeSchema(schema)} />
	))
}

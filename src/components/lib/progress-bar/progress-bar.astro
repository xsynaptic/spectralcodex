---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
	class?: string | undefined;
	height?: string | undefined;
}

const { class: className, height = '1px', ...props } = Astro.props;

// Note 1: make sure to set a sensible z-index value for this component
// Note 2: set a text color to add a bit of a glow to the bar
---

<div class:list={['progress-bar', className]} style={{ height }} aria-hidden="true" {...props}>
</div>

<style>
	.progress-bar {
		pointer-events: none;
		position: fixed;
		top: 0;
		left: 0;
		transition:
			background-color 100ms 100ms ease-in-out,
			opacity 150ms 150ms ease-in,
			transform 300ms ease-out;
		transform: translate3d(0, 0, 0) scaleX(var(--progress-bar, 0));
		transform-origin: 0;
		width: 100%;
	}
</style>

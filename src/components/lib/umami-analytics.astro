---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'script'> {
	siteId: string | undefined;
	domain: string | undefined;
	isProduction: boolean;
	isViewTransitionsEnabled: boolean;
}

const { siteId, domain, isProduction, isViewTransitionsEnabled, ...props } = Astro.props;
---

{
	isProduction && siteId && domain ? (
		<script
			defer
			src={`${domain}/script.js`}
			data-website-id={siteId}
			{...props}
			{...(isViewTransitionsEnabled ? { 'data-astro-rerun': '' } : {})}
			is:inline
		/>
	) : undefined
}

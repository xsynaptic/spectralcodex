---
import type { ImageLayoutOption } from '#lib/image/image-layout.ts';

import ContentImageEntry from '#components/content/content-image-entry.astro';

interface Props {
	src: string;
	alt?: string;
	layout?: ImageLayoutOption;
}

const { src: imageId, ...props } = Astro.props;
---

{
	imageId ? (
		<ContentImageEntry imageId={imageId} {...props}>
			<slot />
		</ContentImageEntry>
	) : undefined
}

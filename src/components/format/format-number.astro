---
import { renderSlot } from '#lib/utils/astro.ts';
import { formatNumber } from '#lib/utils/text.ts';

interface Props {
	locales?: Intl.LocalesArgument | undefined;
	options?: Intl.NumberFormatOptions | undefined;
}

const { locales, options } = Astro.props;

const slotContents = await renderSlot(Astro.slots, 'default');
---

{
	formatNumber({
		number: Number(slotContents),
		locales: locales ?? Astro.currentLocale ?? 'en',
		options,
	})
}

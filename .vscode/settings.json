	"cSpell.enabledFileTypes": {
		"css": true,
		"git-commit": true,
		"html": true,
		"javascript": true,
		"javascriptract": true,
		"json": true,
		"jsonc": true,
		"markdown": true,
		"mdx": true,
		"plaintext": true,
		"scss": true,
		"text": true,
		"typescript": true,
		"typescriptreact": true,
		"yaml": true,
		"yml": true
	},
	"cSpell.words": [
		"airsoft",
		"alfaaz",
		"astro",

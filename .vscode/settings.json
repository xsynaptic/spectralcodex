		"keyv",
		"kleptocratic",
		"laneway",
		"lqip",
		"maplibre",
		"maplibregl",
		"neogeography",
		"netizens",
		"noto",
		"oembed",
		"opengraph",
		"pagefind",
		"parkette",
		"pitstop",

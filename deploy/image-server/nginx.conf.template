proxy_cache_path /var/cache/nginx/ipx levels=1:2 keys_zone=ipx_cache:10m max_size=50g inactive=365d use_temp_path=off;

# Rate limiting: 100 req/s sustained, burst of 1000 for production
limit_req_zone $binary_remote_addr zone=ipx_limit:10m rate=100r/s;
limit_req_status 429;

server {
    listen 80;
    server_name _;

    # URL signature validation using secure_link; signature is passed as ?s= query param
    secure_link $arg_s;
    secure_link_md5 "${uri}${IPX_SERVER_SECRET}";

    # Cache status header for debugging
    add_header X-Cache-Status $upstream_cache_status;

    location /health {
        # Health check doesn't require signature
        secure_link off;
        proxy_pass http://image-server:3000;
        proxy_cache off;
    }

    location / {
        # Reject requests with invalid or missing signature
        if ($secure_link = "") {
            return 403 "Invalid request";
        }

        # Rate limiting with generous burst for image-heavy pages
        limit_req zone=ipx_limit burst=500 nodelay;

        proxy_pass http://image-server:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Caching
        proxy_cache ipx_cache;
        proxy_cache_valid 200 365d;
        proxy_cache_valid 404 1m;
        proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
        proxy_cache_lock on;
        proxy_cache_lock_timeout 5s;
        proxy_cache_key $uri;

        # Timeouts
        proxy_connect_timeout 10s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}
